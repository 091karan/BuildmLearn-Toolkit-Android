<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/question_icon"
            style="@style/TextView.CircleIcon"
            android:padding="2dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/menu_edit_template_item" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <view
                android:id="@+id/word"
                style="@style/TextView.Title.Thin"
                class="org.buildmlearn.toolkit.views.TextViewPlus"
                android:layout_marginLeft="16dp"
                android:paddingBottom="8dp"
                android:paddingTop="16dp"
                android:text="Somedifficultword" />

            <view
                android:id="@+id/meaning"
                style="@style/TextView.Body1"
                class="org.buildmlearn.toolkit.views.TextViewPlus"
                android:layout_marginLeft="16dp"
                android:paddingBottom="8dp"
                android:paddingRight="16dp"
                android:text="This is a long long meaning of some cool word. Made only for BuildmLearn as a pat of GSoC Project." />
        </LinearLayout>


        <ImageView
            android:id="@+id/info_template_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_marginRight="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/template_delete" />


    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/color_divider">

    </View>


</LinearLayout>